vue-popup
  position absolute
  top 100px
  left 100px
  height 300px
  display block
  trans_bounce(.1s)

  &.expand-enter
    opacity 0
    transform scale(.97) translateX(-10px)

  &.expand-leave
    transform scale(.97) translateX(-10px)
    opacity 0

@media (max-width: 768px)
  vue-popup
    left 40px
    top 40px

.component__popup
  position relative
  width 240px
  height 300px
  z-index 150
  background-color #fff
  border-radius $radius_mini
  box-shadow 0 0 2px 0 $border_basic
  &.loading
    background-color #ddd

  .close
    @extend .button-close
    background-image url(../img/icon-close-mini.svg)
    width 10px
    height 10px

  .title
    font-weight bold
    font-size 14px
    color #252525
    text-align center
    padding 15px 35px 12px 0
    margin 0
    border-bottom .99px solid $border_basic
    letter-spacing .09em
    
    span
      margin 0 10px
      display block

  .closeWrap
    position absolute
    top 18px
    right 18px

  .popup_content
    
    .scroll_container
      padding 20px 15px 20px 15px
      overflow auto
      height 200px
    
    .goto-url
      display block
      float right
      .icon
        background url(../img/icon-goto.svg)
        width 10px
        height 10px
        display block

    .description
      margin-top 15px
      fontsize 12px
      line-height 1.7em
